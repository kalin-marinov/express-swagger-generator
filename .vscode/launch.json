    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start Sample Typescript",
            "preLaunchTask": "npm: build - sample",
            "program": "${workspaceFolder}/sample/bin/www.ts",
            "outFiles": [
                "${workspaceFolder}/sample/build/**/*.js"
            ],
            "cwd": "${workspaceFolder}/sample"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Sample Javascript",
            "program": "${workspaceFolder}/sample-js/bin/www.js",
        }
    ]
}